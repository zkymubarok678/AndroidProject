<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditBookActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/Judul"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:cardBackgroundColor="@color/green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppins"
            android:text="Detail Book."
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@id/Judul"
        android:id="@+id/cardView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardElevation="8dp"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="75dp">

        <ImageView
            android:id="@+id/detailPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_insert_photo_24"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/namaDetail"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/cardView2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-113dp"
        android:layout_toRightOf="@id/cardView2"
        android:background="@drawable/border"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/npDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="20dp"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:layout_below="@id/cardView2"/>

    <TextView
        android:id="@+id/emailDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="20dp"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:layout_below="@id/npDetail"/>

    <TextView
        android:id="@+id/alamatDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="20dp"
        android:drawableStart="@drawable/baseline_location_on_24"
        android:drawablePadding="10dp"
        android:layout_below="@id/emailDetail"/>

    <TextView
        android:id="@+id/tglDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border"
        android:layout_marginTop="5dp"
        android:inputType="date"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="20dp"
        android:drawableStart="@drawable/baseline_calendar_today_24"
        android:drawablePadding="10dp"
        android:layout_below="@id/alamatDetail"/>

    <TextView
        android:id="@+id/hpDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border"
        android:layout_marginTop="5dp"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="20dp"
        android:drawableStart="@drawable/baseline_call_24"
        android:drawablePadding="10dp"
        android:layout_below="@id/tglDetail"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:tint="@color/white"
        android:backgroundTint="@color/green" />

</RelativeLayout>